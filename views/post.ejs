                  <% const reactionTypes = [
                  { type: "BOOST", icon: "‚ö°Ô∏è" },
                  { type: "LOVE", icon: "‚ù§Ô∏è" },
                  { type: "LIKE", icon: "üëç" },
                  { type: "CURIOUS", icon: "ü§î" },
                  { type: "INTERESTING", icon: "üí°" },
                  { type: "CELEBRATE", icon: "üéâ" }
