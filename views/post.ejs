                  <div class="solution-username">
                    <a href="/user/<%= post.solution.user.username %>">
                      <%= post.solution.user.username %>
                    </a>
                  </div>
                </div>
                <div class="solution-body">
                  <%- post.solution.comment %>
                </div>

              </div>
              <% } %>



