        const withinBoundaries = event.composedPath().some(
          element => element.classList && element.classList.contains('reaction-popup') || element.classList && element.classList.contains('mainReactionButton')
        );

        if (!withinBoundaries) {
          closeAllDropdowns();
        }
      });
    });
