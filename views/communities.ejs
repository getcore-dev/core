                </button>
<% if (user) { %>
  <button class="header-button" id="post-button" onclick="window.location.href='<%= communityId ? `/c/${community.shortname}/create` : '/create' %>'">
    <span class="material-symbols-outlined">add</span>
  </button>
<% } %>

              <div class="filter-menu" id="filterMenu">
